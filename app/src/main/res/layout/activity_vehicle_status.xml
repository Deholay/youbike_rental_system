<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/vehicleIdEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Vehicle ID" />

    <Button
        android:id="@+id/queryVehicleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Query Vehicle" />

    <TextView
        android:id="@+id/vehicleStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp" /> <!-- 調整這個值來改變文字大小 -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/NormalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/MaintenanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="維修"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/BreakButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通報維修" />
    </LinearLayout>

</LinearLayout>